.reserve-show-page
  .main-container
    .inner-container
      .reserve
        .reserve__title.main-title
          = @studio.name + "  予約"
        .reserve__form
          = form_with url: studio_reserve_path, local: true, method: :patch do |f|
            .reserve__form__datetime
              .reserve__form__datetime__title
                日時：
              = f.select :date, @one_week.map{|w| [w]},
                  {selected: @reserve.date},
                  {class: "reserve__form__datetime--date"}
              = f.select :start_hour, @reserve.start_hour_range(@studio.id).map{|h| [h]},
                  {selected: @reserve.hour},
                  {class: "reserve__form__datetime--time", id: "start_time"}
              時〜
              = f.select :end_hour, @reserve.end_hour_range(@studio.id).map{|h| [h]},
                  {selected: @reserve.hour + 1},
                  {class: "reserve__form__datetime--time", id: "end_time"}
              時
            .reserve__form__fee
              .reserve__form__fee__title
                料金：
                %input#base_fee{type: "hidden", value: @studio.fee}/
              .reserve__form__fee__value
                #payment_fee= @studio.fee.to_s + " 円"
            = f.submit "予約する", class: "reserve__form__button"
