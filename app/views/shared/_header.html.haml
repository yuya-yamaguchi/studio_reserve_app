%header.header
  .header__title.main-title
    = link_to "Studio XXXX", root_path
  %ul.header-menus
    %li.header-menus__menu
      = link_to "スタジオ", root_path
    %li.header-menus__menu
      = link_to "掲示板", "#"
    - if 1 == 1
      %li.header-menus__menu
        = link_to "ユーザ名", "#"
        %ul.sub-menus
          %li.sub-menus__menu
            = link_to "トップ", "#"
          %li.sub_menu__menu
            = link_to "予約一覧", "#"
          %li.sub_menu__menu
            = link_to "ログアウト", "#"
    - else
      %li.header-menus__menu
        = link_to "新規会員登録", "#"
      %li.header-menus__menu
        = link_to "ログイン", "#"
    