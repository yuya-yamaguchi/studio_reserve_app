%header.header
  .header__title.main-title
    = link_to "Studio XXXX", root_path
  %ul.header-menus
    %li.header-menus__menu
      = link_to "スタジオ", root_path
      %ul.sub-menus
        - @studio_lists.each do |studio_list|
          %li.sub-menus__menu
            = link_to studio_list.name, studio_path(studio_list.id)
    %li.header-menus__menu
      = link_to "掲示板", posts_path
    %li.header-menus__menu
      = link_to "セッション", music_sessions_path
    - if user_signed_in?
      %li.header-menus__menu
        = link_to current_user.nickname, user_path(current_user)
        %ul.sub-menus
          %li.sub-menus__menu
            = link_to "トップ", user_path(current_user)
          %li.sub-menus__menu
            = link_to "スタジオ予約状況", user_reserves_path
          %li.sub-menus__menu
            = link_to "ログアウト", destroy_user_session_path, method: :delete
    - else
      %li.header-menus__menu
        = link_to "新規会員登録", new_user_registration_path
      %li.header-menus__menu
        = link_to "ログイン", new_user_session_path
    