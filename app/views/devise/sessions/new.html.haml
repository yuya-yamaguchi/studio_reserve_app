.main-container
  .short-inner-container
    .devise-sessions-new
      .devise-sessions-new__title
        %h2.main-title
          = icon 'fas', 'door-open'
          ログイン
        .devise-sessions-new__title__right
          = render "devise/shared/links"
          = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "google-login" do
            = icon 'fab', 'google'
            Googleアカウントでログイン
            = icon 'fas', 'angle-right'
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field-default", placeholder: "テストアカウント:a@gmail.com"
        .field
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "current-password", class: "text-field-default", placeholder: "12345678"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "ログイン", class: "oparate-btn-gray"
